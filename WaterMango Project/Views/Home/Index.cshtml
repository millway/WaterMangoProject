@*@{
        Layout = null;
    }*@
@using System.Collections.Specialized
@using WaterMango_Project.Controllers
@model List<WaterMango_Project.Models.Plant>


@Styles.Render("~/Content/Plant.css")

@section scripts
{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>
    <script type="text/javascript" src="~/Scripts/plantSignalRControl.js"></script>
    
}













<div class="album py-5 bg-light">
    <div class="container">

        <div id="PlantContainer" class="row">
           
            @if (Model!= null)
            {
                foreach (var plant in Model)
                {
                    <div class="col-md-4" >
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top"
                                 alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="@plant.plantImageUrl" data-holder-rendered="true">
                            <div id="card_@plant.Id" class="card-body">
                                <p class="card-header font-weight-bolder">@plant.Name</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group-lg">
                                        <button type="button"    data-value="@plant.Id"  class="btnStart btn btn-outline-success btn-outline-secondary">Start</button>
                                        <button type="button"   data-value="@plant.Id" class="btnStop btn btn-outline-danger btn-outline-secondary">Stop</button>
                                    </div>
                                    <small id="time_@plant.Id" class="text-muted">@plant.lastTimeWatered.ToString("hh\\:mm\\:ss")</small>
                                </div>
                                <div class="progress rounded-bottom mt-3">
                                 <div id="progress_@plant.Id" class="progress-bar"  role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
           

        </div>
    </div>
</div>



